    "/products/add": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Add a new product to the database",
        "description": "Add a new product to the database by providing the category name, product name, and price.",
        "operationId": "addProduct",
        "requestBody": {
          "description": "The product details to be added",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "category_name": {
                    "type": "string",
                    "example": "Electronics",
                    "description": "The name of the category the product belongs to"
                  },
                  "name": {
                    "type": "string",
                    "example": "Smartphone",
                    "description": "The name of the product"
                  },
                  "price": {
                    "type": "integer",
                    "example": 499,
                    "description": "The price of the product"
                  }
                },
                "required": [
                  "category_name",
                  "name",
                  "price"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "MESSAGE": {
                      "type": "string",
                      "example": "PRODUCT HAS BEEN ADDED SUCCESSFULLY"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request, invalid JSON or parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ERROR": {
                      "type": "string",
                      "example": "ONLY JSON DICTIONARY/HASHMAP IS ALLOWED"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized or error with parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ERROR": {
                      "type": "string",
                      "example": "ERROR WITH THE PARAMETERS OR PRODUCT ALREADY EXISTS"
                    }
                  }
                }
              }
            }
          }
        }
      }

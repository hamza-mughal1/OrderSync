              "json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "endpoint": {
                      "type": "string",
                      "example": "/this/is/an/example/endpoint"
                    },
                    "method": {
                      "type": "string",
                      "example": "POST"
                    },
                    "roles": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": [
                        "admin"
                      ]
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "ENDPOINT HAS BEEN ADDED SUCCESSFULLY",
